1.SELECT E.LAST_NAME EMP_LAST_NAME, M.LAST_NAME MER_LAST_NAME FROM
EMPLOYEES E JOIN EMPLOYEES M ON M.EMPLOYEE_ID = E.MANAGER_ID ;

2.SELECT E.FIRST_NAME||' '|| E.LAST_NAME ,M.FIRST_NAME||' '|| M.LAST_NAME FROM
EMPLOYEES E JOIN EMPLOYEES M ON M.EMPLOYEE_ID = E.MANAGER_ID ;

QUE
REM 1 EMP_FNAME , EMP_SALARY , MGR_FNAME , MGR_SALARY , DIFF
1.SELECT E.FIRST_NAME EMP_FNAME , E.SALARY EMP_SALARY , M.FIRST_NAME MGR_FNAME , M.SALARY , (M.SALARY-E.SALARY) DIFF FROM
EMPLOYEES E JOIN EMPLOYEES M ON M.EMPLOYEE_ID = E.MANAGER_ID ;

REM 2 EMP_LNAME , EMP_HIRE_DATE , MGR_LNAME , MGR_HIRE_DATE , DIFF_IN_WEEKS
2.SELECT E.LAST_NAME EMP_LNAME , E.HIRE_DATE EMP_HIRE_DATE  , M.LAST_NAME MGR_FNAME , M.HIRE_DATE MEG_HIRE_DATE 
, TO_CHAR(E.HIRE_DATE,'W')-TO_CHAR(M.HIRE_DATE,'W') DIFF_IN_WEEKS FROM
EMPLOYEES E JOIN EMPLOYEES M ON M.EMPLOYEE_ID = E.MANAGER_ID ;


REM 3 EMP_FULL_NAME , EMP_HIRE_DATE , MGR_FULL_NAME , MGR_HIRE_DATE , DIFF_IN_YEARS
SELECT E.LAST_NAME EMP_LNAME , E.HIRE_DATE EMP_HIRE_DATE  , M.LAST_NAME MGR_FNAME , M.HIRE_DATE MEG_HIRE_DATE  , 
TO_CHAR(E.HIRE_DATE,'YYYY')-TO_CHAR(M.HIRE_DATE,'YYYY') DIFF_IN_WEEKS FROM
EMPLOYEES E JOIN EMPLOYEES M ON M.EMPLOYEE_ID = E.MANAGER_ID ;

SELECT E.LAST_NAME , ED.DEPARTMENT_NAME ,
M.LAST_NAME , MD.DEPARTMENT_NAME FROM
EMPLOYEES E JOIN EMPLOYEES M ON E.MANAGER_ID = M.EMPLOYEE_ID
JOIN DEPARTMENTS ED ON E.DEPARTMENT_ID = ED.DEPARTMENT_ID
JOIN DEPARTMENTS MD ON M.DEPARTMENT_ID = MD.DEPARTMENT_ID
;


REM EMP_FIRST_NAME  EMP_DEPT_NAME  EMP_CITY    MGR_FIRST_NAME  MGR_DEPT_NAME  MGR_CITY
SELECT E.FIRST_NAME EMP_FIRST_NAME , ED.DEPARTMENT_NAME EMP_DEPT_NAME , EDL.CITY EMP_CITY ,
 M.FIRST_NAME MGR_FIRST_NAME , MD.DEPARTMENT_NAME MGR_DEPT_NAME , MDL.CITY MGR_CITY FROM
EMPLOYEES E JOIN EMPLOYEES M ON E.MANAGER_ID = M.EMPLOYEE_ID
JOIN DEPARTMENTS ED ON E.DEPARTMENT_ID = ED.DEPARTMENT_ID
JOIN DEPARTMENTS MD ON M.DEPARTMENT_ID = MD.DEPARTMENT_ID
JOIN LOCATIONS EDL ON ED.LOCATION_ID = EDL.LOCATION_ID
JOIN LOCATIONS MDL ON MD.LOCATION_ID = MDL.LOCATION_ID;


